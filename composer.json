{
    "name": "benycode/slim-request-validation",
    "description": "A slim middleware for HTTP request validation based on Respect/Validation",
    "keywords": ["slim","framework","middleware","validation", "validator", "request"],
    "type": "library",
    "authors": [
        {
            "name": "Benycode"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "psr/http-message": "^1.0",
        "respect/validation": "^2.1"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4.1",
        "phpunit/phpunit": "^4.0",
        "scrutinizer/ocular": "~1.1",
		"slim/slim": "~4.0",
        "slim/psr7": "^1.3",
        "slim/http": "^1.2",
        "php-di/php-di": "^6.3",
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "BenyCode\\Slim\\Validation\\": "src"
        }
    },
    "license" : "GPL-2.0+",
    "autoload-dev": {
        "psr-4": {
            "BenyCode\\Slim\\Validation\\Tests\\": "tests"
        }
    },
	"config": {
        "preferred-install": "dist"
    }
}
